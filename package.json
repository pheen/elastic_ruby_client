{
	"name": "elastic-ruby-client",
	"displayName": "Elastic Ruby Client",
	"description": "VSCode extension providing a client for Elastic Ruby Server",
	"author": "Joel Korpela",
	"license": "MIT",
	"version": "0.2.6",
	"repository": {
		"type": "git",
		"url": "https://github.com/pheen/elastic_ruby_client"
	},
	"publisher": "Blinknlights",
	"categories": ["Programming Languages"],
	"keywords": [
		"ruby", "language", "server", "elastic", "client", "definition", "goto"
	],
	"engines": {
		"vscode": "^1.43.0"
	},
	"activationEvents": [
		"onLanguage:ruby"
	],
	"main": "./client/out/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Elastic Ruby Client",
			"properties": {
				"elasticRubyClient.projectPaths": {
					"scope": "window",
					"type": "array",
					"default": [],
					"description": "A list of paths that will be mounted, as readonly, when starting the server's docker container. A directory must be apart of the list or a sub-directory of a path in the list for the server to be able to read the file."
				},
				"elasticRubyClient.logLevel": {
					"scope": "window",
					"type": "string",
					"enum": [
						"error",
						"warn",
						"info",
						"debug"
					],
					"default": "error",
					"description": "Controls the logging level for the server. Logs are sent to the STDOUT of the docker container."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"postinstall": "cd client && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@types/mocha": "^8.2.2",
		"@types/node": "^12.12.0",
		"@typescript-eslint/eslint-plugin": "^4.23.0",
		"@typescript-eslint/parser": "^4.23.0",
		"eslint": "^7.26.0",
		"mocha": "^8.3.2",
		"typescript": "^4.2.3"
	}
}
